<!doctype html>
<html lang="<%= lang %>">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= t('registerSubjects.title') %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      :root {
        --accent: #3b82f6;
        --accent-dark: #2563eb;
        --card-radius: 20px;
        --glass-border-dark: rgba(255, 255, 255, 0.14);
        --glass-border-light: rgba(15, 23, 42, 0.08);
        --glass-bg-dark: rgba(255, 255, 255, 0.06);
        --glass-bg-light: rgba(255, 255, 255, 0.7);
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "SF Pro Display",
          "Helvetica Neue", "Inter", Arial, sans-serif;
        min-height: 100vh;
      }
      body.theme-light {
        background: radial-gradient(1200px 800px at 20% 10%, rgba(147, 197, 253, 0.35), transparent 60%),
          radial-gradient(1000px 700px at 90% 20%, rgba(196, 181, 253, 0.35), transparent 60%),
          linear-gradient(135deg, #eef2ff 0%, #f0f9ff 50%, #fdf4ff 100%);
        color: #0f172a;
      }
      body.theme-dark {
        background: radial-gradient(1200px 800px at 15% 10%, rgba(139, 92, 246, 0.3), transparent 60%),
          radial-gradient(1000px 700px at 80% 20%, rgba(59, 130, 246, 0.25), transparent 60%),
          linear-gradient(160deg, #050508 0%, #12061a 45%, #1b0f26 100%);
        color: #f8fafc;
      }
      .glass {
        border-radius: var(--card-radius);
        backdrop-filter: blur(20px);
        transition: background 220ms ease, border-color 220ms ease, box-shadow 220ms ease, transform 220ms ease;
      }
      body.theme-dark .glass {
        background: var(--glass-bg-dark);
        border: 1px solid var(--glass-border-dark);
        box-shadow: 0 18px 45px rgba(8, 8, 20, 0.55), 0 0 0 1px rgba(255, 255, 255, 0.03);
      }
      body.theme-light .glass {
        background: var(--glass-bg-light);
        border: 1px solid var(--glass-border-light);
        box-shadow: 0 16px 40px rgba(15, 23, 42, 0.1), 0 0 0 1px rgba(255, 255, 255, 0.7) inset;
      }
      .auth-card .form-control,
      .auth-card .form-check-input,
      .auth-card .form-select {
        border-radius: 12px;
        border: 1px solid rgba(15, 23, 42, 0.12);
        transition: border-color 150ms ease, box-shadow 150ms ease;
      }
      body.theme-dark .auth-card .form-control,
      body.theme-dark .auth-card .form-check-input,
      body.theme-dark .auth-card .form-select {
        background: rgba(255, 255, 255, 0.08);
        color: #f8fafc;
        border-color: rgba(255, 255, 255, 0.18);
      }
      body.theme-dark .auth-card h1,
      body.theme-dark .auth-card .h4 {
        color: #f8fafc;
      }
      body.theme-dark .auth-card .form-check-label,
      body.theme-dark .auth-card .fw-semibold {
        color: rgba(248, 250, 252, 0.92);
      }
      body.theme-dark .auth-card .form-check-input:checked {
        background-color: #3b82f6;
        border-color: #3b82f6;
      }
      body.theme-dark .auth-card .form-check-input {
        width: 1.1rem;
        height: 1.1rem;
        border-radius: 50%;
        background-color: transparent;
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.4);
      }
      body.theme-dark .auth-card .form-check-input:checked {
        box-shadow: inset 0 0 0 4px #0f172a, 0 0 0 1px #3b82f6;
      }
      body.theme-light .auth-card .form-check-input {
        width: 1.1rem;
        height: 1.1rem;
        border-radius: 50%;
        background-color: transparent;
        box-shadow: inset 0 0 0 1px rgba(15, 23, 42, 0.35);
      }
      body.theme-light .auth-card .form-check-input:checked {
        box-shadow: inset 0 0 0 4px #ffffff, 0 0 0 1px #3b82f6;
      }
      body.theme-light .subject-card {
        background: rgba(255, 255, 255, 0.8);
        border-color: rgba(15, 23, 42, 0.12) !important;
        box-shadow: 0 10px 24px rgba(15, 23, 42, 0.08);
      }
      body.theme-light .subject-card .fw-semibold {
        color: #0f172a;
      }
      .group-buttons {
        display: grid;
        gap: 12px;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      }
      .group-option {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 52px;
        border-radius: 14px;
        border: 1px solid rgba(15, 23, 42, 0.15);
        background: rgba(255, 255, 255, 0.7);
        font-weight: 600;
        cursor: pointer;
        transition: transform 140ms ease, box-shadow 140ms ease, border-color 140ms ease, background 140ms ease;
      }
      .group-option:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 22px rgba(15, 23, 42, 0.12);
        border-color: rgba(59, 130, 246, 0.6);
      }
      .group-option input {
        position: absolute;
        opacity: 0;
        pointer-events: none;
      }
      .group-option.is-selected {
        border-color: rgba(59, 130, 246, 0.9);
        background: rgba(59, 130, 246, 0.12);
        box-shadow: 0 10px 22px rgba(59, 130, 246, 0.2);
      }
      body.theme-dark .group-option {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 255, 255, 0.18);
        color: #f8fafc;
      }
      body.theme-dark .group-option.is-selected {
        background: rgba(59, 130, 246, 0.2);
        border-color: rgba(59, 130, 246, 0.9);
      }
      body.theme-dark .auth-card .border {
        border-color: rgba(255, 255, 255, 0.2) !important;
      }
      body.theme-dark .text-muted {
        color: rgba(255, 255, 255, 0.7) !important;
      }
      .auth-card .form-control:focus,
      .auth-card .form-check-input:focus,
      .auth-card .form-select:focus {
        border-color: var(--accent);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
      }
      .btn-primary {
        background: linear-gradient(180deg, var(--accent) 0%, var(--accent-dark) 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        font-weight: 600;
      }
      .theme-toggle-btn {
        border-radius: 999px;
      }
      .btn {
        transition: transform 140ms ease, box-shadow 140ms ease, border-color 140ms ease, background 140ms ease;
      }
      .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 22px rgba(15, 23, 42, 0.12);
      }
      body.theme-dark .btn:hover {
        box-shadow: 0 10px 22px rgba(0, 0, 0, 0.4);
      }
      .btn:active {
        transform: translateY(0);
        box-shadow: none;
      }
      .app-footer {
        font-size: 0.8rem;
      }
      body.theme-dark .app-footer {
        color: rgba(255, 255, 255, 0.6);
      }
      body.theme-light .app-footer {
        color: rgba(15, 23, 42, 0.6);
      }
      :root {
        --radius-lg: 20px;
        --radius-md: 14px;
        --radius-sm: 10px;
        --s-1: 8px;
        --s-2: 12px;
        --s-3: 16px;
        --s-4: 24px;
        --border-subtle: 1px solid rgba(255, 255, 255, 0.12);
        --border-hover: 1px solid rgba(255, 255, 255, 0.18);
        --glass-bg: rgba(20, 24, 32, 0.45);
        --glass-bg-light: rgba(255, 255, 255, 0.55);
        --glass-blur: 18px;
        --glass-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
        --text-primary: rgba(255, 255, 255, 0.92);
        --text-secondary: rgba(255, 255, 255, 0.68);
        --text-muted: rgba(255, 255, 255, 0.52);
        --focus-ring: 0 0 0 3px rgba(90, 140, 255, 0.25);
        --focus-border: rgba(90, 140, 255, 0.65);
      }
      body.theme-light {
        --text-primary: rgba(15, 23, 42, 0.92);
        --text-secondary: rgba(15, 23, 42, 0.68);
        --text-muted: rgba(15, 23, 42, 0.52);
      }
      body::before {
        content: '';
        position: fixed;
        inset: 0;
        pointer-events: none;
        background-image:
          repeating-linear-gradient(0deg, rgba(255,255,255,0.03) 0, rgba(255,255,255,0.03) 1px, transparent 1px, transparent 2px),
          repeating-linear-gradient(90deg, rgba(0,0,0,0.03) 0, rgba(0,0,0,0.03) 1px, transparent 1px, transparent 2px);
        opacity: 0.05;
        mix-blend-mode: soft-light;
        z-index: -1;
      }
      body.theme-dark {
        background: radial-gradient(1200px 800px at 15% 10%, rgba(139, 92, 246, 0.22), transparent 60%),
          radial-gradient(1000px 700px at 80% 20%, rgba(59, 130, 246, 0.18), transparent 60%),
          linear-gradient(160deg, #07070b 0%, #110b18 55%, #161225 100%);
      }
      body.theme-light {
        background: radial-gradient(1200px 800px at 20% 10%, rgba(147, 197, 253, 0.18), transparent 60%),
          radial-gradient(1000px 700px at 90% 20%, rgba(196, 181, 253, 0.18), transparent 60%),
          linear-gradient(135deg, #ecf2fb 0%, #eef3fb 45%, #f5f7ff 100%);
      }
      .glass {
        border-radius: var(--radius-lg);
        backdrop-filter: blur(var(--glass-blur));
        background: var(--glass-bg);
        border: var(--border-subtle);
        box-shadow: var(--glass-shadow);
      }
      body.theme-light .glass {
        background: var(--glass-bg-light);
        border: 1px solid rgba(15, 23, 42, 0.08);
        box-shadow: 0 10px 30px rgba(15, 23, 42, 0.12);
      }
      .segment-control {
        display: grid;
        grid-auto-flow: column;
        grid-auto-columns: 1fr;
        gap: 0;
        border-radius: var(--radius-md);
        border: 1px solid rgba(255, 255, 255, 0.18);
        background: rgba(255, 255, 255, 0.08);
        overflow: hidden;
      }
      body.theme-light .segment-control {
        border-color: rgba(15, 23, 42, 0.12);
        background: rgba(15, 23, 42, 0.04);
      }
      .segment {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 46px;
        border: none;
        background: transparent;
        font-weight: 600;
        cursor: pointer;
        color: var(--text-secondary);
        transition: background 160ms ease, color 160ms ease;
      }
      .segment:hover {
        background: rgba(59, 130, 246, 0.08);
        color: var(--text-primary);
      }
      .segment input {
        position: absolute;
        opacity: 0;
        pointer-events: none;
      }
      .segment.is-selected {
        background: rgba(59, 130, 246, 0.18);
        color: #fff;
        box-shadow: inset 0 0 0 1px rgba(59, 130, 246, 0.5);
      }
      body.theme-light .segment.is-selected {
        color: #0f172a;
        background: rgba(59, 130, 246, 0.2);
      }
      .theme-toggle-floating {
        position: fixed;
        top: 16px;
        right: 16px;
        z-index: 10;
      }
      .theme-toggle-min {
        width: 40px;
        height: 40px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.08);
        color: var(--text-primary);
        backdrop-filter: blur(10px);
      }
      body.theme-light .theme-toggle-min {
        border-color: rgba(15, 23, 42, 0.12);
        background: rgba(255, 255, 255, 0.7);
      }
    </style>
  </head>
  <body class="theme-light">
    <div class="theme-toggle-floating">
      <button
        class="theme-toggle-min"
        type="button"
        id="themeToggle"
        aria-label="Toggle theme"
        data-light-label="â˜€ï¸"
        data-dark-label="ðŸŒ™"
      >
        ðŸŒ™
      </button>
    </div>
    <div class="container py-4">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
          <div class="card auth-card glass">
            <div class="card-body p-4">
              <h1 class="h4 mb-3"><%= t('registerSubjects.title') %></h1>
              <p class="text-muted"><%= t('registerSubjects.subtitle') %></p>

              <form method="POST" action="/register/subjects">
                <% if (!subjects.length) { %>
                  <div class="alert alert-info"><%= t('registerSubjects.noSubjects') %></div>
                <% } else { %>
                  <% subjects.forEach(function(s) { %>
                    <% if (s.group_count > 1) { %>
                    <div class="border rounded p-3 mb-3 subject-card">
                      <div class="fw-semibold mb-2"><%= s.name %></div>
                      <div class="segment-control">
                        <% for (let g = 1; g <= s.group_count; g++) { %>
                          <label class="segment">
                            <input
                              type="radio"
                              name="subject_<%= s.id %>"
                              value="<%= g %>"
                            />
                            <%= t('registerSubjects.group') %> <%= g %>
                          </label>
                        <% } %>
                      </div>
                    </div>
                    <% } %>
                  <% }); %>
                <% } %>

                <button type="submit" class="btn btn-primary"><%= t('registerSubjects.finish') %></button>
              </form>
            </div>
          </div>
          <footer class="app-footer text-center mt-3">
            <small>Â© <%= new Date().getFullYear() %> <%= authorName %> Â· v<%= appVersion %> Â· <%= buildStamp %></small>
          </footer>
        </div>
      </div>
    </div>
    <script>
      const themeToggle = document.getElementById('themeToggle');
      const savedTheme = localStorage.getItem('ui-theme') || 'theme-light';
      document.body.classList.remove('theme-light', 'theme-dark');
      document.body.classList.add(savedTheme);
      themeToggle.textContent = savedTheme === 'theme-dark' ? themeToggle.dataset.lightLabel : themeToggle.dataset.darkLabel;
      themeToggle.addEventListener('click', () => {
        const next = document.body.classList.contains('theme-dark') ? 'theme-light' : 'theme-dark';
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(next);
        localStorage.setItem('ui-theme', next);
        themeToggle.textContent = next === 'theme-dark' ? themeToggle.dataset.lightLabel : themeToggle.dataset.darkLabel;
      });

      document.querySelectorAll('.segment-control').forEach((group) => {
        group.addEventListener('click', (event) => {
          const label = event.target.closest('.segment');
          if (!label) return;
          group.querySelectorAll('.segment').forEach((el) => el.classList.remove('is-selected'));
          label.classList.add('is-selected');
        });
      });
    </script>
  </body>
</html>
