<div class="modal fade changelog-liquid-modal" id="changelogModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content changelog-sheet">
      <div class="modal-header">
        <h5 class="modal-title">Changelog</h5>
        <span class="status-chip status-chip--info">Release notes</span>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% if (changelog && changelog.length) { %>
          <% changelog.forEach(function(entry) { %>
            <div class="mb-3 changelog-release">
              <div class="d-flex flex-wrap align-items-center gap-2 mb-1">
                <span class="fw-semibold">v<%= entry.version %></span>
                <% if (entry.date) { %>
                  <span class="text-muted small"><%= entry.date %></span>
                <% } %>
              </div>
              <ul class="mb-0">
                <% (entry.items || []).forEach(function(item) { %>
                  <li><%= item %></li>
                <% }); %>
              </ul>
            </div>
          <% }); %>
        <% } else { %>
          <p class="text-muted mb-0">Немає оновлень.</p>
        <% } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary glass" data-bs-dismiss="modal">Закрити</button>
      </div>
    </div>
  </div>
</div>
