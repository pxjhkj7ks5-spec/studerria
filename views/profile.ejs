  <body class="theme-light">
    <%- include('partials/topbar', { role, username, t, activePage: 'profile', pageTitle: t('schedule.profile') }) %>
    <div class="container py-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6">
          <div class="card auth-card glass">
            <div class="card-body p-4">
              <h1 class="h4 mb-3"><%= t('profile.title') %></h1>

              <% if (error) { %>
                <div class="alert alert-danger"><%= error %></div>
              <% } %>
              <% if (success) { %>
                <div class="alert alert-success"><%= success %></div>
              <% } %>

              <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="text-muted small"><%= t('profile.activity') %></div>
                <span class="activity-badge"><%= typeof activityPoints !== 'undefined' ? activityPoints : 0 %></span>
              </div>
              <div class="row g-2 mb-4">
                <div class="col-4">
                  <div class="p-2 stat-tile text-center">
                    <div class="text-muted small"><%= t('profile.homeworkCount') %></div>
                    <div class="fw-semibold"><%= (profileStats && profileStats.homeworkCreated) || 0 %></div>
                  </div>
                </div>
                <div class="col-4">
                  <div class="p-2 stat-tile text-center">
                    <div class="text-muted small"><%= t('profile.teamworkCreated') %></div>
                    <div class="fw-semibold"><%= (profileStats && profileStats.teamworkCreated) || 0 %></div>
                  </div>
                </div>
                <div class="col-4">
                  <div class="p-2 stat-tile text-center">
                    <div class="text-muted small"><%= t('profile.teamworkJoined') %></div>
                    <div class="fw-semibold"><%= (profileStats && profileStats.teamworkJoined) || 0 %></div>
                  </div>
                </div>
              </div>

              <form method="POST" action="/profile">
                <div class="mb-3">
                  <label for="full_name" class="form-label"><%= t('profile.fullName') %></label>
                  <input id="full_name" name="full_name" class="form-control" value="<%= user.full_name %>" required />
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label"><%= t('profile.newPassword') %></label>
                  <input id="password" name="password" type="password" class="form-control" />
                </div>
                <div class="mb-3">
                  <label for="confirm_password" class="form-label"><%= t('profile.confirmPassword') %></label>
                  <input id="confirm_password" name="confirm_password" type="password" class="form-control" />
                </div>
                <div class="mb-3">
                  <label for="language" class="form-label"><%= t('profile.language') %></label>
                  <select id="language" name="language" class="form-select">
                    <option value="uk" <%= (user.language || 'uk') === 'uk' ? 'selected' : '' %>><%= t('language.uk') %></option>
                    <option value="en" <%= (user.language || 'uk') === 'en' ? 'selected' : '' %>><%= t('language.en') %></option>
                  </select>
                </div>
                <div class="d-grid gap-2">
                  <button class="btn btn-primary" type="submit"><%= t('profile.save') %></button>
                  <a href="/schedule" class="btn btn-outline-secondary"><%= t('profile.back') %></a>
                </div>
              </form>

              <div class="mt-4">
                <% if (teacherCourse) { %>
                  <div class="text-muted small mb-2">Викладацькі предмети</div>
                  <a class="btn btn-outline-primary w-100" href="/teacher/subjects">Обрати предмети заново</a>
                  <% if (teacherStatus) { %>
                    <div class="text-muted small mt-2">
                      Статус: <%= teacherStatus === 'approved' ? 'Підтверджено' : (teacherStatus === 'rejected' ? 'Відхилено' : 'Очікує підтвердження') %>
                    </div>
                  <% } %>
                <% } else { %>
                  <form method="POST" action="/profile/reset-subjects" onsubmit="return confirm('Скинути вибір предметів та груп?')">
                    <button class="btn btn-outline-danger w-100 profile-reset-btn" type="submit">Обрати групи заново</button>
                  </form>
                  <div class="text-muted small mt-2">Обовʼязкові предмети буде призначено автоматично.</div>
                <% } %>
