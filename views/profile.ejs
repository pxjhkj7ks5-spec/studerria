<!doctype html>
<html lang="<%= lang %>">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= t('profile.title') %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      :root {
        --accent: #3b82f6;
        --accent-dark: #2563eb;
        --card-radius: 20px;
        --glass-border-dark: rgba(255, 255, 255, 0.14);
        --glass-border-light: rgba(15, 23, 42, 0.08);
        --glass-bg-dark: rgba(255, 255, 255, 0.06);
        --glass-bg-light: rgba(255, 255, 255, 0.7);
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "SF Pro Display",
          "Helvetica Neue", "Inter", Arial, sans-serif;
        min-height: 100vh;
      }
      body.theme-light {
        background: radial-gradient(1200px 800px at 20% 10%, rgba(147, 197, 253, 0.35), transparent 60%),
          radial-gradient(1000px 700px at 90% 20%, rgba(196, 181, 253, 0.35), transparent 60%),
          linear-gradient(135deg, #eef2ff 0%, #f0f9ff 50%, #fdf4ff 100%);
        color: #0f172a;
      }
      body.theme-dark {
        background: radial-gradient(1200px 800px at 15% 10%, rgba(139, 92, 246, 0.3), transparent 60%),
          radial-gradient(1000px 700px at 80% 20%, rgba(59, 130, 246, 0.25), transparent 60%),
          linear-gradient(160deg, #050508 0%, #12061a 45%, #1b0f26 100%);
        color: #f8fafc;
      }
      .glass {
        border-radius: var(--card-radius);
        backdrop-filter: blur(20px);
        transition: background 220ms ease, border-color 220ms ease, box-shadow 220ms ease, transform 220ms ease;
      }
      body.theme-dark .glass {
        background: var(--glass-bg-dark);
        border: 1px solid var(--glass-border-dark);
        box-shadow: 0 18px 45px rgba(8, 8, 20, 0.55), 0 0 0 1px rgba(255, 255, 255, 0.03);
      }
      body.theme-light .glass {
        background: var(--glass-bg-light);
        border: 1px solid var(--glass-border-light);
        box-shadow: 0 16px 40px rgba(15, 23, 42, 0.1), 0 0 0 1px rgba(255, 255, 255, 0.7) inset;
      }
      .auth-card .form-control {
        border-radius: 12px;
        border: 1px solid rgba(15, 23, 42, 0.12);
        padding: 0.75rem 0.9rem;
        transition: border-color 150ms ease, box-shadow 150ms ease;
      }
      body.theme-dark .auth-card .form-control {
        background: rgba(255, 255, 255, 0.08);
        color: #f8fafc;
        border-color: rgba(255, 255, 255, 0.18);
      }
      body.theme-dark .auth-card .form-label {
        color: rgba(248, 250, 252, 0.85);
      }
      body.theme-dark .auth-card h1,
      body.theme-dark .auth-card .h4 {
        color: #f8fafc;
      }
      body.theme-dark .auth-card .btn-outline-secondary {
        color: #f8fafc;
        border-color: rgba(255, 255, 255, 0.25);
      }
      body.theme-dark .text-muted {
        color: rgba(255, 255, 255, 0.7) !important;
      }
      .auth-card .form-control:focus {
        border-color: var(--accent);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
      }
      .btn-primary {
        background: linear-gradient(180deg, var(--accent) 0%, var(--accent-dark) 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        font-weight: 600;
      }
      .btn-outline-secondary {
        border-radius: 12px;
      }
      .btn {
        transition: transform 140ms ease, box-shadow 140ms ease, border-color 140ms ease, background 140ms ease;
      }
      .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 22px rgba(15, 23, 42, 0.12);
      }
      body.theme-dark .btn:hover {
        box-shadow: 0 10px 22px rgba(0, 0, 0, 0.4);
      }
      .btn:active {
        transform: translateY(0);
        box-shadow: none;
      }
      .activity-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.35rem 0.75rem;
        border-radius: 999px;
        font-weight: 600;
        background: rgba(59, 130, 246, 0.15);
        color: #1d4ed8;
        border: 1px solid rgba(59, 130, 246, 0.35);
      }
      body.theme-dark .activity-badge {
        background: rgba(59, 130, 246, 0.2);
        color: #e2e8f0;
        border-color: rgba(255, 255, 255, 0.2);
      }
      .app-footer {
        font-size: 0.8rem;
      }
      body.theme-dark .app-footer {
        color: rgba(255, 255, 255, 0.6);
      }
      body.theme-light .app-footer {
        color: rgba(15, 23, 42, 0.6);
      }
    </style>
  </head>
  <body class="theme-light">
    <div class="container py-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6">
          <div class="card auth-card glass">
            <div class="card-body p-4">
              <h1 class="h4 mb-3"><%= t('profile.title') %></h1>

              <% if (error) { %>
                <div class="alert alert-danger"><%= error %></div>
              <% } %>
              <% if (success) { %>
                <div class="alert alert-success"><%= success %></div>
              <% } %>

              <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="text-muted small"><%= t('profile.activity') %></div>
                <span class="activity-badge"><%= typeof activityPoints !== 'undefined' ? activityPoints : 0 %></span>
              </div>

              <form method="POST" action="/profile">
                <div class="mb-3">
                  <label for="full_name" class="form-label"><%= t('profile.fullName') %></label>
                  <input id="full_name" name="full_name" class="form-control" value="<%= user.full_name %>" required />
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label"><%= t('profile.newPassword') %></label>
                  <input id="password" name="password" type="password" class="form-control" />
                </div>
                <div class="mb-3">
                  <label for="confirm_password" class="form-label"><%= t('profile.confirmPassword') %></label>
                  <input id="confirm_password" name="confirm_password" type="password" class="form-control" />
                </div>
                <div class="mb-3">
                  <label for="language" class="form-label"><%= t('profile.language') %></label>
                  <select id="language" name="language" class="form-select">
                    <option value="uk" <%= (user.language || 'uk') === 'uk' ? 'selected' : '' %>><%= t('language.uk') %></option>
                    <option value="en" <%= (user.language || 'uk') === 'en' ? 'selected' : '' %>><%= t('language.en') %></option>
                  </select>
                </div>
                <div class="d-grid gap-2">
                  <button class="btn btn-primary" type="submit"><%= t('profile.save') %></button>
                  <a href="/schedule" class="btn btn-outline-secondary"><%= t('profile.back') %></a>
                </div>
              </form>
            </div>
          </div>
          <div class="d-flex justify-content-center mt-3">
            <button
              class="btn btn-outline-secondary btn-sm"
              type="button"
              id="themeToggle"
              data-light-label="<%= t('theme.light') %>"
              data-dark-label="<%= t('theme.dark') %>"
            >
              <%= t('theme.dark') %>
            </button>
          </div>
          <footer class="app-footer text-center mt-3">
            <small>© <%= new Date().getFullYear() %> <%= authorName %> · v<%= appVersion %> · <%= buildStamp %></small>
          </footer>
        </div>
      </div>
    </div>
    <script>
      const themeToggle = document.getElementById('themeToggle');
      const savedTheme = localStorage.getItem('ui-theme') || 'theme-light';
      document.body.classList.remove('theme-light', 'theme-dark');
      document.body.classList.add(savedTheme);
      themeToggle.textContent = savedTheme === 'theme-dark' ? themeToggle.dataset.lightLabel : themeToggle.dataset.darkLabel;
      themeToggle.addEventListener('click', () => {
        const next = document.body.classList.contains('theme-dark') ? 'theme-light' : 'theme-dark';
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(next);
        localStorage.setItem('ui-theme', next);
        themeToggle.textContent = next === 'theme-dark' ? themeToggle.dataset.lightLabel : themeToggle.dataset.darkLabel;
      });
    </script>
  </body>
</html>
