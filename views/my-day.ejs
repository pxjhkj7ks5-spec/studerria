        <% if (hasProgressDashboard && !isStudentMyDayView) { %>
          <article class="cockpit-card section-card" id="progressRiskBlock">
            <div class="section-head">
              <h2 class="section-title">–ü—Ä–æ–≥—Ä–µ—Å —ñ —Ä–∏–∑–∏–∫</h2>
              <span class="section-subtitle">–ü—Ä–æ–≥–Ω–æ–∑ —Ñ—ñ–Ω–∞–ª—É —Ç–∞ —Ä–∏–∑–∏–∫ –Ω–µ–¥–æ–ø—É—Å–∫—É</span>
            </div>

            <div class="summary-grid progress-summary-grid">
              <div class="summary-pill">
                <span>–£ —Ä–∏–∑–∏–∫—É</span>
                <strong><%= Number(progressDashboard.at_risk_count || 0) %></strong>
              </div>
              <div class="summary-pill">
                <span>–í–∏—Å–æ–∫–∏–π</span>
                <strong><%= Number(progressDashboard.high_risk_count || 0) %></strong>
              </div>
              <div class="summary-pill">
                <span>–¶—ñ–ª—å</span>
                <strong><%= Number(progressDashboard.admission_target || 60) %></strong>
              </div>
              <div class="summary-pill">
                <span>–í—á–∞—Å–Ω–æ</span>
                <strong><%= progressDashboard.overall_on_time_share === null || typeof progressDashboard.overall_on_time_share === 'undefined' ? '-' : `${progressDashboard.overall_on_time_share}%` %></strong>
              </div>
            </div>

            <% if (!progressSubjects.length) { %>
              <div class="empty-state compact">
                <div class="empty-state-title">–ü–æ–∫–∏ –Ω–µ–º–∞—î –¥–∞–Ω–∏—Ö –ø—Ä–æ–≥—Ä–µ—Å—É</div>
                <div class="empty-state-subtitle">–ü–æ—Ç—Ä—ñ–±–Ω—ñ –æ—Ü—ñ–Ω–µ–Ω—ñ –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—ñ –¥–ª—è –ø–æ–±—É–¥–æ–≤–∏ –ø—Ä–æ–≥–Ω–æ–∑—É.</div>
              </div>
            <% } else { %>
              <div class="item-list progress-list">
                <% progressSubjects.slice(0, 8).forEach((item) => {
                     const riskMeta = getProgressRiskMeta(item);
                %>
                  <div class="item-row progress-row">
                    <div class="item-main">
                      <div class="item-title"><%= item.subject_name || '–ü—Ä–µ–¥–º–µ—Ç' %></div>
                      <div class="item-meta">
                        <span>–§—ñ–Ω–∞–ª: <strong><%= Number(item.current_final_score || 0) %></strong> / 100</span>
                        <span>–°—Ç–µ–ª—è: <strong><%= Number(item.max_reachable_final_score || 0) %></strong></span>
                        <span>–ü—Ä–æ—Å—Ç—Ä–æ—á–æ–∫: <%= Number(item.overdue_count || 0) %></span>
                        <span>–í—á–∞—Å–Ω–æ: <%= item.on_time_share === null || typeof item.on_time_share === 'undefined' ? '-' : `${item.on_time_share}%` %></span>
                      </div>
