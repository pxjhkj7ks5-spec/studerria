    <main class="container cockpit-page py-4">
      <% if (okMessage) { %>
        <div class="alert alert-success cockpit-alert" role="alert"><%= okMessage %></div>
      <% } %>
      <% if (errMessage) { %>
        <div class="alert alert-danger cockpit-alert" role="alert"><%= errMessage %></div>
      <% } %>

      <section class="cockpit-card brief-card <%= briefToneClass %>">
        <div class="brief-head">
          <span class="brief-kicker">Leadership Brief</span>
          <span class="brief-meta">–¢–∏–∂–¥–µ–Ω—å <%= cockpit.week_number || '-' %></span>
        </div>
        <h1 class="brief-title"><%= brief.title || '–¢–≤—ñ–π –¥–µ–Ω—å –ø—ñ–¥ –∫–æ–Ω—Ç—Ä–æ–ª–µ–º' %></h1>
        <p class="brief-message"><%= brief.message || '–ö—Ä–∏—Ç–∏—á–Ω–∏—Ö —Å–∏–≥–Ω–∞–ª—ñ–≤ –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ, —Ç—Ä–∏–º–∞–π —Ç–µ–º–ø.' %></p>
        <div class="brief-actions">
          <a class="btn btn-glass" href="<%= brief.action_href || '/schedule' %>"><%= brief.action_label || '–í—ñ–¥–∫—Ä–∏—Ç–∏ —Ä–æ–∑–∫–ª–∞–¥' %></a>
          <button type="button" class="btn btn-soft" id="briefWhyToggle">–ß–æ–º—É —è —Ü–µ –±–∞—á—É?</button>
        </div>
        <div class="brief-reasons d-none" id="briefWhyPanel">
          <% if (briefReasons.length) { %>
            <% briefReasons.forEach((reason) => { %>
              <div class="brief-reason-row"><%= reason %></div>
            <% }) %>
          <% } else { %>
            <div class="brief-reason-row">–°–∏–≥–Ω–∞–ª–∏ —â–µ –Ω–∞–∫–æ–ø–∏—á—É—é—Ç—å—Å—è.</div>
          <% } %>
        </div>
      </section>

      <section class="cockpit-grid">
        <article class="cockpit-card section-card<%= isStudentMyDayView ? ' order-1' : '' %>" id="deadlinesBlock">
          <div class="section-head">
            <h2 class="section-title">–ù–∞–π–±–ª–∏–∂—á—ñ –¥–µ–¥–ª–∞–π–Ω–∏</h2>
            <span class="section-subtitle">2-3 –∑–∞–¥–∞—á—ñ –∑ –Ω–∞–π–≤–∏—â–∏–º –ø—Ä—ñ–æ—Ä–∏—Ç–µ—Ç–æ–º</span>
          </div>
          <% if (!deadlineItems.length) { %>
            <div class="empty-state">
              <div class="empty-state-title">–ö—Ä–∏—Ç–∏—á–Ω–∏—Ö –¥–µ–¥–ª–∞–π–Ω—ñ–≤ –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ</div>
              <div class="empty-state-subtitle">–°–∏—Å—Ç–µ–º–∞ –Ω–µ –±–∞—á–∏—Ç—å –≤—ñ–¥–∫—Ä–∏—Ç–∏—Ö —Ä–∏–∑–∏–∫—ñ–≤ –Ω–∞ –Ω–∞–π–±–ª–∏–∂—á–∏–π –ø–µ—Ä—ñ–æ–¥.</div>
            </div>
          <% } else { %>
            <div class="item-list">
              <% deadlineItems.forEach((item) => {
                   const status = getDeadlineStatus(item);
                   const isHomework = item && item.type === 'homework';
                   const canSubmitNow = Boolean(isHomework && item.can_submit);
                   const hasSubmission = Boolean(isHomework && item.submission_id);
                   const creatorName = String(item && item.created_by ? item.created_by : '').trim();
              %>
                <div class="item-row deadline-row">
                  <div class="item-main">
                    <div class="item-title"><%= item.description || '–ó–∞–≤–¥–∞–Ω–Ω—è' %></div>
                    <div class="item-meta">
                      <span><%= item.subject_name || '–ü—Ä–µ–¥–º–µ—Ç' %></span>
                      <span>–¥–æ <%= formatShortDate(item.deadline_date) %></span>
                      <% if (creatorName) { %><span>–¥–æ–¥–∞–≤: <%= creatorName %></span><% } %>
                      <% if (item.is_control) { %><span class="type-chip">–ö–æ–Ω—Ç—Ä–æ–ª—å</span><% } %>
                      <% if (item.is_credit) { %><span class="type-chip">–ó–∞–ª—ñ–∫</span><% } %>
                    </div>
                  </div>
                  <div class="item-side">
                    <span class="status-chip <%= status.className %>"><%= status.label %></span>
                    <% if (canSubmitNow) { %>
                      <button
                        type="button"
                        class="btn btn-submit-now"
                        data-submit-homework-id="<%= item.id %>"
                        data-submit-title="<%= item.description || '–ó–∞–≤–¥–∞–Ω–Ω—è' %>"
                        data-submit-mode="<%= hasSubmission ? 'update' : 'create' %>"
                      >
                        <%= hasSubmission ? '–û–Ω–æ–≤–∏—Ç–∏ –∑–¥–∞—á—É' : '–ó–¥–∞—Ç–∏' %>
                      </button>
                    <% } else if (isHomework && hasSubmission && item.submission_status === 'submitted_on_time') { %>
                      <span class="item-note">–ó–¥–∞–Ω–æ <%= item.submitted_date || '' %></span>
                    <% } else if (isHomework && hasSubmission && item.submission_status === 'submitted_late') { %>
                      <span class="item-note">–ó–¥–∞–Ω–æ —ñ–∑ –∑–∞–ø—ñ–∑–Ω–µ–Ω–Ω—è–º</span>
                    <% } else if (item.type === 'teamwork') { %>
                      <a href="/teamwork" class="btn btn-inline-link">–í—ñ–¥–∫—Ä–∏—Ç–∏</a>
                    <% } else { %>
                      <a href="/schedule" class="btn btn-inline-link">–í—ñ–¥–∫—Ä–∏—Ç–∏</a>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
          <div class="section-footer-link">
            <a href="/schedule">–í—ñ–¥–∫—Ä–∏—Ç–∏ –ø–æ–≤–Ω–∏–π —Å–ø–∏—Å–æ–∫ —É —Ä–æ–∑–∫–ª–∞–¥—ñ</a>
          </div>
        </article>

        <article class="cockpit-card section-card<%= isStudentMyDayView ? ' order-4' : '' %>" id="nextClassesBlock">
          <div class="section-head">
            <h2 class="section-title">–ü–∞—Ä–∏ –Ω–∞–π–±–ª–∏–∂—á–∏–º —á–∞—Å–æ–º</h2>
            <span class="section-subtitle">–°—å–æ–≥–æ–¥–Ω—ñ —Ç–∞ –∑–∞–≤—Ç—Ä–∞</span>
          </div>
          <% if (!classItems.length) { %>
