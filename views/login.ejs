<!doctype html>
<html lang="<%= lang %>">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= t('login.title') %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      :root {
        --accent: #3b82f6;
        --accent-dark: #2563eb;
        --text-muted: #6b7280;
        --card-radius: 20px;
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "SF Pro Display",
          "Helvetica Neue", "Inter", Arial, sans-serif;
        min-height: 100vh;
      }
      body.theme-light {
        background: radial-gradient(1200px 800px at 20% 10%, rgba(147, 197, 253, 0.35), transparent 60%),
          radial-gradient(1000px 700px at 90% 20%, rgba(196, 181, 253, 0.35), transparent 60%),
          linear-gradient(135deg, #eef2ff 0%, #f0f9ff 50%, #fdf4ff 100%);
        color: #0f172a;
      }
      body.theme-dark {
        background: radial-gradient(1200px 800px at 15% 10%, rgba(139, 92, 246, 0.3), transparent 60%),
          radial-gradient(1000px 700px at 80% 20%, rgba(59, 130, 246, 0.25), transparent 60%),
          linear-gradient(160deg, #050508 0%, #12061a 45%, #1b0f26 100%);
        color: #f8fafc;
      }
      .login-card {
        border-radius: var(--card-radius);
        border: 1px solid rgba(15, 23, 42, 0.08);
        box-shadow: 0 20px 60px rgba(15, 23, 42, 0.12);
      }
      body.theme-dark .login-card {
        background: rgba(17, 17, 30, 0.9);
        border-color: rgba(255, 255, 255, 0.12);
      }
      body.theme-dark .login-card {
        color: #f8fafc;
      }
      .login-card .form-control {
        border-radius: 12px;
        border: 1px solid rgba(15, 23, 42, 0.12);
        padding: 0.75rem 0.9rem;
        transition: border-color 150ms ease, box-shadow 150ms ease;
      }
      .login-card .form-control:focus {
        border-color: var(--accent);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
      }
      body.theme-dark .login-card .form-control {
        background: rgba(255, 255, 255, 0.08);
        color: #f8fafc;
        border-color: rgba(255, 255, 255, 0.18);
      }
      body.theme-dark .login-card .form-control::placeholder {
        color: rgba(248, 250, 252, 0.65);
      }
      body.theme-dark .login-card .form-label {
        color: rgba(248, 250, 252, 0.85);
      }
      .btn-primary {
        background: linear-gradient(180deg, var(--accent) 0%, var(--accent-dark) 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        font-weight: 600;
      }
      .btn-outline-primary {
        border-radius: 12px;
      }
      .btn {
        transition: transform 140ms ease, box-shadow 140ms ease, border-color 140ms ease, background 140ms ease;
      }
      .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 22px rgba(15, 23, 42, 0.12);
      }
      body.theme-dark .btn:hover {
        box-shadow: 0 10px 22px rgba(0, 0, 0, 0.4);
      }
      .btn:active {
        transform: translateY(0);
        box-shadow: none;
      }
      .helper {
        color: var(--text-muted);
        font-size: 0.875rem;
      }
      body.theme-dark .helper {
        color: rgba(255, 255, 255, 0.7);
      }
      body.theme-dark .text-muted {
        color: rgba(255, 255, 255, 0.7) !important;
      }
      .toggle-password {
        position: static;
        border: 1px solid rgba(15, 23, 42, 0.18);
        background: #fff;
        color: #111827;
        font-size: 0.85rem;
        font-weight: 600;
        padding: 0.25rem 0.75rem;
        border-radius: 999px;
        transition: transform 120ms ease, box-shadow 120ms ease, border-color 120ms ease;
      }
      body.theme-dark .toggle-password {
        background: rgba(15, 23, 42, 0.65);
        border-color: rgba(255, 255, 255, 0.2);
        color: #f8fafc;
      }
      .toggle-password:hover {
        transform: translateY(-1px);
        border-color: rgba(59, 130, 246, 0.5);
        box-shadow: 0 6px 16px rgba(59, 130, 246, 0.18);
      }
      .theme-toggle-btn {
        border-radius: 999px;
      }
      @media (max-width: 576px) {
        .login-card {
          border-radius: 16px;
        }
      }
      .app-footer {
        font-size: 0.8rem;
      }
      body.theme-dark .app-footer {
        color: rgba(255, 255, 255, 0.6);
      }
      body.theme-light .app-footer {
        color: rgba(15, 23, 42, 0.6);
      }
    </style>
  </head>
  <body class="theme-light">
    <div class="container">
      <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-11 col-sm-8 col-md-6 col-lg-4">
          <div class="card login-card">
            <div class="card-body p-4">
              <h1 class="h4 mb-3 text-center"><%= t('login.title') %></h1>

              <% if (error) { %>
              <div class="alert alert-danger" role="alert">
                <%= t('login.error') %>
              </div>
              <% } %>

              <form id="loginForm" method="POST" action="/login">
                <div class="mb-3">
                  <label for="full_name" class="form-label"><%= t('login.fullName') %></label>
                  <input
                    id="full_name"
                    name="full_name"
                    type="text"
                    class="form-control"
                    placeholder="<%= t('login.fullNamePlaceholder') %>"
                    autocomplete="username"
                    required
                  />
                </div>

                <div class="mb-2 password-row">
                  <div class="d-flex justify-content-between align-items-center mb-1">
                    <label for="password" class="form-label mb-0"><%= t('login.password') %></label>
                    <button class="toggle-password" type="button" id="togglePassword"><%= t('login.show') %></button>
                  </div>
                  <input
                    id="password"
                    name="password"
                    type="password"
                    class="form-control"
                    placeholder="<%= t('login.passwordPlaceholder') %>"
                    autocomplete="current-password"
                    required
                  />
                </div>
                <div class="helper mb-3"><%= t('login.forgot') %></div>
                <div class="form-check mb-3">
                  <input class="form-check-input" type="checkbox" id="remember_me" name="remember_me" />
                  <label class="form-check-label" for="remember_me"><%= t('auth.remember') %></label>
                </div>

                <div class="d-grid gap-2 mt-3">
                  <button type="submit" class="btn btn-primary"><%= t('login.signIn') %></button>
                  <a class="btn btn-outline-primary" href="/register"><%= t('login.createAccount') %></a>
                </div>
              </form>
            </div>
          </div>
          <div class="d-flex justify-content-center mt-3">
            <button
              class="btn btn-outline-secondary btn-sm theme-toggle-btn"
              type="button"
              id="themeToggle"
              data-light-label="<%= t('theme.light') %>"
              data-dark-label="<%= t('theme.dark') %>"
            >
              <%= t('theme.dark') %>
            </button>
          </div>
          <footer class="app-footer text-center mt-3">
            <small>© <%= new Date().getFullYear() %> <%= authorName %> · v<%= appVersion %> · <%= buildStamp %></small>
          </footer>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      const loginForm = document.getElementById('loginForm');
      if (loginForm) {
        loginForm.addEventListener('keydown', (event) => {
          if (event.key === 'Enter') {
            event.preventDefault();
            loginForm.requestSubmit();
          }
        });
      }
      const toggle = document.getElementById('togglePassword');
      const pwd = document.getElementById('password');
      if (toggle && pwd) {
        toggle.addEventListener('click', () => {
          const isHidden = pwd.type === 'password';
          pwd.type = isHidden ? 'text' : 'password';
          toggle.textContent = isHidden ? 'Hide' : 'Show';
        });
      }
      const themeToggle = document.getElementById('themeToggle');
      const savedTheme = localStorage.getItem('ui-theme') || 'theme-light';
      document.body.classList.remove('theme-light', 'theme-dark');
      document.body.classList.add(savedTheme);
      themeToggle.textContent = savedTheme === 'theme-dark' ? themeToggle.dataset.lightLabel : themeToggle.dataset.darkLabel;
      themeToggle.addEventListener('click', () => {
        const next = document.body.classList.contains('theme-dark') ? 'theme-light' : 'theme-dark';
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(next);
        localStorage.setItem('ui-theme', next);
        themeToggle.textContent = next === 'theme-dark' ? themeToggle.dataset.lightLabel : themeToggle.dataset.darkLabel;
      });
    </script>
  </body>
</html>
