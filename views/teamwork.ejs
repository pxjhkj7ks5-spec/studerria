                <% if (isTeacherMode && s.group_label) { %>
                  <span class="subject-pill-meta"><%= s.group_label %></span>
                <% } %>
              </a>
            <% }); %>
          <% } %>
        </div>
      </div>

      <% if (selectedSubjectId) { %>
